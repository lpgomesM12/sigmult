<section class="content-header">
    <%if notice%>
        <div class="alert alert-success alert-dismissible">
         <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <%= notice %>
        </div>
      <%end%>
</section>

<!-- Main content -->
<section class="content">
 <!-- Small boxes (Stat box) -->
<div class="box box-primary">
   <div class="box-header with-border">
      <h3 class="box-title">Fornecedor</h3>
    </div><!-- /.box-header -->
<form role="form">
<div class="box-body">

<p>
  <strong>Nome fornecedor:</strong>
  <%= @fornecedor.nome_fornecedor %>
</p>

<p>
  <strong>CPNJ:</strong>
  <%= @fornecedor.desc_cnpj %>
</p>

<p>
  <strong>Telefones:</strong>

  <%@fornecedor.telefonefornecedors.each do |telefone|%>
    <%=telefone.desc_telefone%> |
  <%end%>
</p>
<p>
  <strong>Endereco:</strong>
  <%= @fornecedor.endereco.endereco %>
  <%= @fornecedor.endereco.cidade.nome_cidade %> -
  <%= @fornecedor.endereco.cidade.estado.sigl_estado %>
</p>


</div><!-- /.box -->
</form>
</div><!-- /.box-body -->

<div class="btn-group">
<%= link_to edit_fornecedor_path(@fornecedor), :class => "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-pencil"></span> Editar
<% end %>
<%= link_to fornecedors_path, :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>
