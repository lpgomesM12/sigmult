<section class="content">
<p id="notice"><%= notice %></p>

<h1>Empresas</h1>

<table>
  <thead>
    <tr>
      <th>Nome empresa</th>
      <th>Endereco</th>
      <th>Categoriaempresa</th>
      <th>Cnpj</th>
      <th>Nome responsavel</th>
      <th>Telefone1</th>
      <th>Telefone2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nome_empresa %></td>
        <td><%= empresa.endereco %></td>
        <td><%= empresa.categoriaempresa %></td>
        <td><%= empresa.cnpj %></td>
        <td><%= empresa.nome_responsavel %></td>
        <td><%= empresa.telefone1 %></td>
        <td><%= empresa.telefone2 %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Empresa', new_empresa_path %>

</selection>
