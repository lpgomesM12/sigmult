<section class="content">

<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Vendas</h3>
   </div><!-- /.box-header -->
<div class="box-body table-responsive no-padding">
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
<thead>
  <tr>
    <th>Cliente</th>
    <th>Situação</th>
    <th>Valor</th>
    <th></th>
  </tr>
</thead>

<tbody>
   <% @vendas.each do |venda| %>
    <tr>
      <td><%= venda.cliente.nome_cliente %></td>
      <td><%= venda.situacao %></td>
      <td><%= number_to_currency(venda.valr_total , unit: "", separator: ",", delimiter: "") %></td>
      <td align='right'>
        <div class="btn-group">
            <%= link_to "pdv/?id=#{venda.id}" , class: "btn btn-default btn-sm", title: 'Exibir', data: { toggle: 'tooltip', placement: 'top'} do %>
              <span class="glyphicon glyphicon-list-alt text-success"></span>
            <% end %>
        </div>
      </td>
  </tr>
<% end %>
</tbody>
</table>
</div>
</div><!-- /.box -->
