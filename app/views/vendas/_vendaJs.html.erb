//setando valor do id quando passado pela URL
$("#venda_id").val($.urlParam('id'));
$("#btnCancelaVenda").hide();
$("#btnFinalizaVenda").hide();
$("#btnImprimirVenda").hide();

 //função que busca os produtos autocomplete.
