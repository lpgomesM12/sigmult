<div class="panel panel-default">
  <div class="panel-body">
    Basic panel example
  </div>
</div>


<p id="notice"><%= notice %></p>

<h1>Vendas</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Data exclusao</th>
      <th>Empresa</th>
      <th>Valr desconto</th>
      <th>Valr venda</th>
      <th>Valr total</th>
      <th>Situacao</th>
      <th>Formapagamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendas.each do |venda| %>
      <tr>
        <td><%= venda.cliente %></td>
        <td><%= venda.data_exclusao %></td>
        <td><%= venda.empresa %></td>
        <td><%= venda.valr_desconto %></td>
        <td><%= venda.valr_venda %></td>
        <td><%= venda.valr_total %></td>
        <td><%= venda.situacao %></td>
        <td><%= venda.formapagamento %></td>
        <td><%= link_to 'Show', venda %></td>
        <td><%= link_to 'Edit', edit_venda_path(venda) %></td>
        <td><%= link_to 'Destroy', venda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Venda', new_venda_path %>
