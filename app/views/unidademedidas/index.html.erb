<h1>Unidademedidas</h1>

<table>
  <thead>
    <tr>
      <th>Nome unidade</th>
      <th>Empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unidademedidas.each do |unidademedida| %>
      <tr>
        <td><%= unidademedida.nome_unidade %></td>
        <td><%= unidademedida.empresa %></td>
        <td><%= link_to 'Show', unidademedida %></td>
        <td><%= link_to 'Edit', edit_unidademedida_path(unidademedida) %></td>
        <td><%= link_to 'Destroy', unidademedida, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

