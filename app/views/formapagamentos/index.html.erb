<p id="notice"><%= notice %></p>

<h1>Formapagamentos</h1>

<table>
  <thead>
    <tr>
      <th>Nome formapagamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formapagamentos.each do |formapagamento| %>
      <tr>
        <td><%= formapagamento.nome_formapagamento %></td>
        <td><%= link_to 'Show', formapagamento %></td>
        <td><%= link_to 'Edit', edit_formapagamento_path(formapagamento) %></td>
        <td><%= link_to 'Destroy', formapagamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

