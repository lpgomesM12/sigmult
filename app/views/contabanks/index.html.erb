<section class="content">

  <%if notice %>
       <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
         <%= notice %>
       </div>
    <%end%>
<div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
                <div class="col-lg-6">
                  <%= link_to new_contabank_path, class: "btn btn-primary" do %>
                         <span class="glyphicon glyphicon-plus"></span> Nova Conta
                  <% end %>
                </div>
          </div><!-- /.row -->
      </div>
</div>

  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Contas</h3>
     </div><!-- /.box-header -->
  <div class="box-body table-responsive no-padding">
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
  <thead>
    <tr>
      <th>Banco</th>
      <th>Conta</th>
      <th>Agência</th>
      <th>Conta</th>
    </tr>
  </thead>

  <tbody>
        <% @contabanks.each do |contabank| %>
      <tr>
        <td><%= contabank.nome_banco %></td>
        <td><%= contabank.nome_conta %></td>
        <td><%= contabank.numr_agencia %></td>
        <td><%= contabank.numr_conta %></td>

       <td align='right'>
        <div class="btn-group">
            <%= link_to contabank, class: "btn btn-default btn-sm", title: 'Exibir', data: { toggle: 'tooltip', placement: 'top'} do %>
              <span class="glyphicon glyphicon-list-alt text-success"></span>
            <% end %>
            <%= link_to  edit_contabank_path(contabank) , class: "btn btn-default btn-sm", title: 'Editar', data: { toggle: 'tooltip', placement: 'top'} do %>
              <span class="glyphicon glyphicon-pencil text-primary"></span>
            <% end %>
           <%= link_to contabank, method: :delete, data: { confirm: 'Deseja excluir o registro?', toggle: 'tooltip', placement: 'top'}, class: "btn btn-default btn-sm", title: 'Excluír' do %>
              <span class="glyphicon glyphicon-trash text-danger"></span>
            <% end %>
         </div>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
</div><!-- /.box -->

</section>
