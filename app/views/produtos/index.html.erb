<section class="content">

    <section class="content-header">
      <%if notice %>
           <div class="alert alert-success alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
             <%= notice %>
           </div>
        <%end%>
    </section>

      <h4>Produto/Serviço</h4>
      <div class="box box-primary">
            <div class="box-header with-border">
            <%= form_tag nil, method: 'GET' do %>
                <div class="row">
                        <div class="col-lg-6">
                          <%= link_to new_produto_path, class: "btn btn-primary btn-sm" do %>
                                 <span class="glyphicon glyphicon-plus"></span> Novo Produto
                          <% end %>
                        </div>
                        <div class="col-lg-6">
                          <div class="input-group">
                            <input id="q" name="q" type="text" value="<%=@q%>" class="form-control" placeholder="Pesquise nome do produto">
                            <span class="input-group-btn">
                              <button class="btn btn-success" type="submit" >Buscar</button>
                            </span>
                          </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                  </div><!-- /.row -->
            <% end %>
             </div><!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-striped table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Categoria</th>
              <th>Marca</th>
              <th>Custo R$</th>
              <th>Venda R$</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @produtos.each do |produto| %>
              <tr>
                <td><%= produto.nome_produto %></td>
                <td><%= produto.categoriaproduto.nome_categoria %></td>
                <td><%= produto.nome_marca %></td>
                <td><%= produto.valor_custo %></td>
                <td><%= produto.valor_venda %></td>
                <td><%= produto.status %></td>

                <td align='right'>
                  <div class="btn-group">
                      <%= link_to produto, class: "btn btn-default btn-sm", title: 'Exibir', data: { toggle: 'tooltip', placement: 'top'} do %>
                        <span class="glyphicon glyphicon-list-alt text-success"></span>
                      <% end %>
                      <%= link_to  edit_produto_path(produto) , class: "btn btn-default btn-sm", title: 'Editar', data: { toggle: 'tooltip', placement: 'top'} do %>
                        <span class="glyphicon glyphicon-pencil text-primary"></span>
                      <% end %>
                     <%= link_to produto, method: :delete, data: { confirm: 'Deseja excluir o registro?', toggle: 'tooltip', placement: 'top'}, class: "btn btn-default btn-sm", title: 'Excluír' do %>
                        <span class="glyphicon glyphicon-trash text-danger"></span>
                      <% end %>
                  </div>
                </td>

              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      </div><!-- /.box -->
    <br>

    </section>



