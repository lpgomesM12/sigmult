<section class="content-header">
    <%if notice%>
      <div class="alert alert-success alert-dismissible">
       <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <%= notice %>
      </div>
      <%end%>
</section>

<!-- Main content -->
<section class="content">
 <!-- Small boxes (Stat box) -->
<div class="box box-primary">
   <div class="box-header with-border">
      <h3 class="box-title">Produtos</h3>
    </div><!-- /.box-header -->
<form role="form">
<div class="box-body">

<p>
  <strong>Nome produto:</strong>
  <%= @produto.nome_produto %>
</p>

<p>
  <strong>Desc observacao:</strong>
  <%= @produto.desc_observacao %>
</p>

<p>
  <strong>Categoriaproduto:</strong>
  <%= @produto.categoriaproduto.nome_categoria %>
</p>

<p>
  <strong>Data exclusao:</strong>
  <%= @produto.data_exclusao %>
</p>

<p>
  <strong>Qtd estoqueminimo:</strong>
  <%= @produto.qtd_estoqueminimo %>
</p>

<p>
  <strong>Qtd estoquemaximo:</strong>
  <%= @produto.qtd_estoquemaximo %>
</p>

<p>
  <strong>Nome marca:</strong>
  <%= @produto.nome_marca %>
</p>

<p>
  <strong>Cod barras:</strong>
  <%= @produto.cod_barras %>
</p>

<p>
  <strong>Valor custo:</strong>
  <%= @produto.valor_custo %>
</p>

<p>
  <strong>Valor venda:</strong>
  <%= @produto.valor_venda %>
</p>

<p>
  <strong>Desc tamanho:</strong>
  <%= @produto.desc_tamanho %>
</p>

<p>
  <strong>Status:</strong>
  <%= @produto.status %>
</p>

<p>
  <strong>Peso kilograma:</strong>
  <%= @produto.peso_kilograma %>
</p>

<p>
  <strong>Desc unidademedida:</strong>
  <%= @produto.desc_unidademedida %>
</p>

  </div><!-- /.box -->
 </form>
</div><!-- /.box-body -->

<div class="btn-group">
  <%= link_to edit_produto_path(@produto), :class => "btn btn-default btn-sm" do %>
<span class="glyphicon glyphicon-pencil"></span> Editar
<% end %>
  <%= link_to produtos_path, :class => "btn btn-default btn-sm" do %>
 <span class="glyphicon glyphicon-arrow-left"></span> Voltar
<% end %>
</div>
