<section class="content">

  <section class="content-header">
    <%if notice %>
         <div class="alert alert-success alert-dismissible">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
           <%= notice %>
         </div>
      <%end%>
  </section>

  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Controle Estoque</h3>
     </div><!-- /.box-header -->
  <div class="box-body table-responsive no-padding">
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
  <thead>
    <tr>
      <th>Produto</th>
      <th>Qtd Produto</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @estoques.each do |estoque| %>
      <tr>
        <td><%= estoque.produto.nome_produto %></td>
        <td><%= estoque.qtd_produto %></td>

       <td align='right'>
        <div class="btn-group">
            <%= link_to estoque, class: "btn btn-default btn-sm", title: 'Exibir', data: { toggle: 'tooltip', placement: 'top'} do %>
              <span class="glyphicon glyphicon-list-alt text-success"></span>
            <% end %>
            <%= link_to edit_estoque_path(estoque) , class: "btn btn-default btn-sm", title: 'Editar', data: { toggle: 'tooltip', placement: 'top'} do %>
              <span class="glyphicon glyphicon-pencil text-primary"></span>
            <% end %>
           <%= link_to estoque, method: :delete, data: { confirm: 'Deseja excluir o registro?', toggle: 'tooltip', placement: 'top'}, class: "btn btn-default btn-sm", title: 'ExcluÃ­r' do %>
              <span class="glyphicon glyphicon-trash text-danger"></span>
            <% end %>
         </div>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
</div><!-- /.box -->

<br>
